<launch>
	<include file="$(find turtlebot_stage)/launch/turtlebot_in_stage.launch" />
	<node pkg="ard_sub" type="sub.py" name="sub" respawn="true"/>

	<node pkg="rosserial_python" type="serial_node.py" name="serial_node">
	    <param name="port" value="/dev/ttyACM0">
	    </param>
    </node>
	<node pkg="ard_sub" type="fixed_tf_broadcaster.py" name="sensor_tf" respawn="true"/>
	<node pkg="ard_sub" type="Moving_tf_broadcaster.py" name="Heat_point_tf" respawn="true"/>
	<node pkg="rqt_graph" type="rqt_graph" name="rqt_graph" respawn="false"/>
</launch>	
